{% extends '/views/layouts/main.twig' %}

{% block wrapper %}
    <div id="wrapper">
        <div id="header">
            <div class="container">
                <div class="clear">

                    <strong class="logo"><a href="/">Салатник</a></strong>
                    <div class="header-frame">
                        <nav id="nav">
                            <ul class="nav">
                                {% for cat in this.categories %}
                                    {% if App.controller.id=='site' %}
                                        <li><a href="#{{ cat.code }}">{{ cat.title }}</a></li>
                                    {% else %}
                                        <li><a href="/category/{{ cat.code }}">{{ cat.title }}</a></li>
                                    {% endif %}
                                {% endfor %}
                                <li><a href="#map">мапа доставки</a></li>
                            </ul>
                            <div class="basket"><a  href="/cart/">кошик</a></div>
                        </nav>
                        <div class="phone">{{ opt('mainphone') }}</div>
                        <span class="info">{{ opt('workhours') }}</span>
                    </div>

                </div>
            </div>
        </div>

        <div id="main">
            {% block content %}{% endblock %}
            <div class="item-head" id="map">
                <div class="container">мапа доставки</div>
            </div>
            <div class="map">
                <iframe src="https://www.google.com/maps/embed/v1/place?key=AIzaSyCfOKFbQiCTosEdTwqmd96q-aIn8e76keU&q=вул.+Симона+Петлюри,+28,+Київ,+місто+Київ" width="100%" height="425" frameborder="0" style="border:0"></iframe>
            </div>
        </div>
    </div>

    <footer id="footer">
        <div class="container">
            <div class="clear footer-frame">
                <strong class="footer-logo"><a href="/">Салатник</a></strong>
                <div class="contacts">
                    <div class="col">{{ opt('contacts')|raw }}<br/>
                    {{ opt('workhours') }}</div>
                </div>
                <ul class="social-list">
                    <li><a href="/"><img src="images/ico02.png" width="17" height="17" alt="image description" /></a></li>
                    <li><a href="/"><img src="images/ico03.png" width="17" height="17" alt="image description" /></a></li>
                </ul>
            </div>
        </div>
    </footer>

    <div id="send-msg-popup" class="popup-holder">
        <div class="bg"></div>
        <div class="popup">
            <form action="/cart/order/" method="post" class="custom-form">
                <fieldset>
                    <div class="row">
                        <label class="input-holder">
                            <input type="text" name="name" placeholder="Ім'я">
                        </label>
                    </div>
                    <div class="row">
                        <label class="input-holder">
                            <input type="text" name="email" placeholder="Email">
                        </label>
                    </div>
                    <div class="row">
                        <div class="code-col">
                            <label class="input-holder">
                                <input name="code" type="text" placeholder="Код" maxlength="3">
                            </label>
                        </div>
                        <div class="phone-col">
                            <label class="input-holder">
                                <input name="phone" type="text" placeholder="Телефон" maxlength="7">
                            </label>
                        </div>
                    </div>
                    <div class="row">
                        <label class="input-holder">
                            <input type="text" name="address" placeholder="Адреса">
                        </label>
                    </div>
                    <div class="row">
                        <label class="textarea-holder">
                            <textarea cols="30" name="detail_text" rows="5" placeholder="Коментар"></textarea>
                        </label>
                    </div>
                    <div class="btn-holder clear">
                        <button class="green-btn pull-right">надіслати</button>
                    </div>
                </fieldset>
            </form>
            <a href="#" class="close"></a>
        </div>
    </div>
{% endblock %}