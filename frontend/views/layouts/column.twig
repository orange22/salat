{% extends '/views/layouts/main.twig' %}

{% block wrapper %}
    <div id="wrapper">
        <div id="header">
            <div class="container">
                <div class="clear">

                    <strong class="logo"><a href="/">Салатник</a></strong>
                    <div class="header-frame">
                        <nav id="nav">
                            <ul class="nav">
                                {% for cat in this.categories %}
                                    <li><a href="#{{ cat.code }}">{{ cat.title }}</a></li>
                                {% endfor %}
                                <li><a href="#map">карта доставки</a></li>
                            </ul>
                            <div class="basket"><a  href="/cart/">корзина</a></div>
                        </nav>
                        <div class="phone">{{ opt('mainphone') }}</div>
                    </div>

                </div>
            </div>
        </div>

        <div id="main">
            {% block content %}{% endblock %}
            <div class="item-head" id="map">
                <div class="container">карта доставки</div>
            </div>
            <div class="map">
                <iframe src="https://www.google.com/maps/embed?pb=!1m14!1m12!1m3!1d2541.0889936984854!2d30.522504050950385!3d50.43944299769924!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!5e0!3m2!1sru!2sua!4v1409053248319" width="100%" height="425" frameborder="0" style="border:0"></iframe>
            </div>
        </div>
    </div>
    <footer id="footer">
        <div class="container clear footer-frame">
            <strong class="footer-logo"><a href="#">Салатник</a></strong>
            <div class="contacts">
                <div class="col">{{ opt('contacts')|raw }}</div>
            </div>
            <ul class="social-list">
                <li><a href="#"><img src="images/ico02.png" width="17" height="17" alt="image description" /></a></li>
                <li><a href="#"><img src="images/ico03.png" width="17" height="17" alt="image description" /></a></li>
            </ul>
        </div>
    </footer>
    <div id="send-msg-popup" class="popup-holder">
        <div class="bg"></div>
        <div class="popup">
            <form action="/cart/order/" method="post" class="custom-form">
                <fieldset>
                    <div class="row">
                        <label class="input-holder">
                            <input type="text" name="name" placeholder="Имя">
                        </label>
                    </div>
                    <div class="row">
                        <label class="input-holder">
                            <input type="text" name="email" placeholder="Email">
                        </label>
                    </div>
                    <div class="row">
                        <label class="input-holder">
                            <input type="text" name="phone" placeholder="Тефелон">
                        </label>
                    </div>
                    <div class="row">
                        <label class="input-holder">
                            <input type="text" name="address" placeholder="Адрес">
                        </label>
                    </div>
                    <div class="row">
                        <label class="textarea-holder">
                            <textarea cols="30" name="detail_text" rows="5" placeholder="Примечание"></textarea>
                        </label>
                    </div>
                    <div class="btn-holder clear">
                        <button class="green-btn pull-right">отправить</button>
                    </div>
                </fieldset>
            </form>
            <a href="#" class="close"></a>
        </div>
    </div>
{% endblock %}