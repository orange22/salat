{% extends '/views/layouts/column.twig' %}

{% block content %}
        <div class="container">
            <ul class="item-list">
                {% for product in products %}
                <li>
                    <div class="img-holder">{{ product.thumb|image }}</div>
                    <div class="description">
                        <div class="price-col">
                            <div class="price">50<span>грн</span></div>
                            <div class="weight">300г</div>
                        </div>
                        <div class="info">
                            <div class="name">{{ product.title|escape }}</div>
                        </div>
                    </div>
                    <a href="#" class="buy-btn">Заказать</a>
                </li>
                {% endfor %}
            </ul>
        </div>
{% endblock %}